{
  "name": "node",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "volta": {
    "node": "19.5.0"
  },
  "scripts": {
    "build": "rimraf dist && swc ./src -d dist",
    "db-seed": "npx prisma db seed",
    "db:console": "docker compose exec db psql -h localhost -U postgres -d nodebackend_dev",
    "db:migrate": "knex migrate:latest",
    "docker:db:migrate": "docker compose run backend yarn db:migrate",
    "rebuild:backend": "docker compose build backend && docker compose rm --stop backend && docker compose up -d backend",
    "dev": "yarn build && nodemon dist/index.js",
    "dev:docker": "yarn build && node --inspect=0.0.0.0 dist/index.js",
    "checked": "ncu -u && yarn install && yarn autoclean --force",
    "prepare": "husky install",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 80,
    "trailingComma": "all",
    "singleQuote": true
  },
  "dependencies": {
    "@prisma/client": "^4.9.0",
    "@types/nanoid-dictionary": "^4.2.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "knex": "^2.4.2",
    "morgan": "^1.10.0",
    "nanoid": "^4.0.0",
    "pg": "^8.9.0",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.60",
    "@swc/core": "^1.3.32",
    "@types/express": "^4.17.16",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "prisma": "^4.9.0",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  }
}
