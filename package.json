{
  "name": "node",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "volta": {
    "node": "19.5.0",
    "yarn": "3.4.1"
  },
  "scripts": {
    "build": "rimraf dist && swc ./src -d dist",
    "db-seed": "npx prisma db seed",
    "docker:db:migrate:undo": "docker compose run backend npx knex migrate:down",
    "db:console": "docker compose exec db psql -h localhost -U postgres -d nodebackend_dev",
    "db:migrate": "knex migrate:latest",
    "docker:db:migrate": "docker compose run backend yarn db:migrate",
    "rebuild:backend": "docker compose build backend && docker compose rm --stop backend && docker compose up -d backend",
    "dev": "yarn build && nodemon dist/index.js",
    "dev:docker": "yarn build && node --inspect=0.0.0.0 dist/index.js",
    "checked": "ncu -u && yarn install && yarn autoclean --force",
    "prepare": "husky install",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 80,
    "trailingComma": "all",
    "singleQuote": true
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "@types/uuid": "^9.0.8",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "husky": "^9.0.10",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.5",
    "pg": "^8.11.3",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.9",
    "@swc/core": "^1.4.0",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "prisma": "^5.9.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  }
}
