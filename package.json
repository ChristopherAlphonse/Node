{
  "name": "node",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "volta": {
    "node": "17.3.0"
  },
  "scripts": {
    "build": "rimraf dist && swc ./src -d dist",
    "db:console": "docker compose exec postgres psql -h localhost -U postgres -d webapp_dev",
    "db:migrate": "knex migrate:latest",
    "docker:db:migrate": "docker compose run backend yarn db:migrate",
    "rebuild:be": "docker compose build backend && docker compose rm --stop backend && docker compose up -d backend",
    "start": "node dist/index.js",
    "start:docker": "yarn build && node --inspect=0.0.0.0 dist/index.js",
    "checked": "ncu -u && yarn install",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "4.9.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "knex": "^2.4.2",
    "morgan": "^1.10.0",
    "nanoid": "^4.0.0",
    "pg": "^8.9.0",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.30",
    "@tsconfig/node16": "^1.0.3",
    "@types/express": "^4.17.16",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.33.0",
    "prisma": "^4.9.0",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1"
  }
}
