{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "target": "esNext",
    "module": "NodeNext",

    "strict": true,
    "skipLibCheck": true
  },
  "typeRoots": ["types", "node_modules/@types"],
  "include": ["**/*.ts", "**/*.tsx", "./*.ts"],
  "exclude": ["node_modules"]
}
