{
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Node (Docker)",
      "protocol": "inspector",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}/src",
      "remoteRoot": "${workspaceFolder}src/app/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "/usr/src/app/src/*": "${workspaceFolder}/src/*"
      },
      "skipFiles": [
        "${workspaceFolder}/src/app/node_modules/**/*.js",
        "<node_internals>/**"
      ]
    }
  ]
}
